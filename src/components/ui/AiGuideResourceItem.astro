---
import ExternalLink from './ExternalLink.astro';

interface Props {
  pattern: string;
}

const { pattern } = Astro.props;
const href = `/patterns/${pattern}/llm.md`;
---

<li>
  <ExternalLink href={href} class="text-primary hover:underline">
    AI Implementation Guide (llm.md)
  </ExternalLink>
  <span class="text-muted-foreground text-sm"> - ARIA specs, keyboard support, test checklist</span>
</li>
