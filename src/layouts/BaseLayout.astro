---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'APG Patterns Examples - Accessible component patterns for React, Vue, and Svelte' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="dark:dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | APG Patterns Examples</title>
    <script is:inline>
      // Dark mode initialization
      const theme = localStorage.getItem('apg-theme');
      if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="min-h-screen bg-(--color-background) text-(--color-text)">
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="border-b border-(--color-border) px-4 py-3">
      <nav class="mx-auto flex max-w-6xl items-center justify-between">
        <a href="/" class="text-lg font-bold">
          APG Patterns Examples
        </a>

        <div class="flex items-center gap-4">
          <a
            href="/patterns/"
            class:list={[
              "hover:text-(--color-primary)",
              currentPath.startsWith('/patterns') && "text-(--color-primary) font-medium"
            ]}
          >
            Patterns
          </a>
          <a
            href="/guide/"
            class:list={[
              "hover:text-(--color-primary)",
              currentPath.startsWith('/guide') && "text-(--color-primary) font-medium"
            ]}
          >
            Guide
          </a>
          <a
            href="/about/"
            class:list={[
              "hover:text-(--color-primary)",
              currentPath === '/about/' && "text-(--color-primary) font-medium"
            ]}
          >
            About
          </a>

          <!-- Framework Selector -->
          <select
            id="framework-selector"
            class="rounded border border-(--color-border) bg-transparent px-2 py-1 text-sm"
            aria-label="Select framework"
          >
            <option value="react">React</option>
            <option value="vue">Vue</option>
            <option value="svelte">Svelte</option>
          </select>

          <!-- Theme Toggle -->
          <button
            id="theme-toggle"
            type="button"
            class="rounded p-2 hover:bg-gray-100 dark:hover:bg-gray-800"
            aria-label="Toggle dark mode"
          >
            <svg class="h-5 w-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
            <svg class="hidden h-5 w-5 dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <main id="main-content" class="mx-auto max-w-6xl px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-(--color-border) px-4 py-6 text-center text-sm text-(--color-muted)">
      <p>
        APG Patterns Examples -
        <a href="https://www.w3.org/WAI/ARIA/apg/" class="underline hover:text-(--color-primary)">
          WAI-ARIA Authoring Practices Guide
        </a>
      </p>
    </footer>

    <script>
      // Theme toggle
      const themeToggle = document.getElementById('theme-toggle');
      themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('apg-theme', isDark ? 'dark' : 'light');
      });

      // Framework selector
      const frameworkSelector = document.getElementById('framework-selector') as HTMLSelectElement;
      const savedFramework = localStorage.getItem('apg-selected-framework') || 'react';
      if (frameworkSelector) {
        frameworkSelector.value = savedFramework;
        frameworkSelector.addEventListener('change', (e) => {
          const target = e.target as HTMLSelectElement;
          localStorage.setItem('apg-selected-framework', target.value);
        });
      }
    </script>
  </body>
</html>
