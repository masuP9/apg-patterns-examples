---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Button } from '@/components/ui/button';
import { withBase } from '@/lib/utils';
---

<BaseLayout title="Page Not Found">
  <div class="flex min-h-[50vh] flex-col items-center justify-center text-center">
    <h1 class="text-muted-foreground mb-4 text-6xl font-bold">404</h1>
    <h2 class="mb-4 text-2xl font-semibold">Page Not Found</h2>
    <p class="text-muted-foreground mb-8 max-w-md">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex gap-4">
      <Button href={withBase('/')}>Go Home</Button>
      <Button variant="outline" href={withBase('/patterns/')}>Browse Patterns</Button>
    </div>
  </div>
</BaseLayout>
