---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Tile, TileContent, TileTitle, TileDescription } from '@/components/ui/tile';
---

<BaseLayout title="Home">
  <div class="text-center">
    <h1 class="mb-4 text-4xl font-bold">APG Patterns Examples</h1>
    <p class="mb-8 text-lg text-muted-foreground">
      Accessible component patterns for React, Vue, and Svelte
    </p>

    <div class="grid gap-6 md:grid-cols-3">
      <Tile variant="floating" href="/patterns/">
        <TileContent>
          <TileTitle>Patterns</TileTitle>
          <TileDescription>
            Browse WAI-ARIA APG pattern implementations
          </TileDescription>
        </TileContent>
      </Tile>

      <Tile variant="floating" href="/guide/">
        <TileContent>
          <TileTitle>Guide</TileTitle>
          <TileDescription>
            Learn how to use these patterns in your projects
          </TileDescription>
        </TileContent>
      </Tile>

      <Tile variant="floating" href="/about/">
        <TileContent>
          <TileTitle>About</TileTitle>
          <TileDescription>
            About this project and its goals
          </TileDescription>
        </TileContent>
      </Tile>
    </div>

    <section class="mt-16">
      <h2 class="mb-6 text-2xl font-bold">Featured Patterns</h2>
      <div class="grid gap-4 md:grid-cols-2">
        <Tile variant="floating" href="/patterns/button/react/">
          <TileContent class="flex flex-row items-center gap-4 text-left">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-muted text-2xl shrink-0">
              ðŸ”˜
            </div>
            <div>
              <TileTitle>Toggle Button</TileTitle>
              <TileDescription>Button with pressed state</TileDescription>
            </div>
          </TileContent>
        </Tile>

        <Tile variant="floating" href="/patterns/tabs/react/">
          <TileContent class="flex flex-row items-center gap-4 text-left">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-muted text-2xl shrink-0">
              ðŸ“‘
            </div>
            <div>
              <TileTitle>Tabs</TileTitle>
              <TileDescription>Tabbed interface with keyboard navigation</TileDescription>
            </div>
          </TileContent>
        </Tile>
      </div>
    </section>
  </div>
</BaseLayout>
