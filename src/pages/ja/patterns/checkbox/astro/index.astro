---
import PatternLayout from '../../../../../layouts/PatternLayout.astro';
import Checkbox from '@patterns/checkbox/Checkbox.astro';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideActions from '@/components/ui/AiGuideActions.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/checkbox/AccessibilityDocs.astro';
import TestingDocs from '@patterns/checkbox/TestingDocs.astro';
import NativeHtmlNotice from '@patterns/checkbox/NativeHtmlNotice.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/checkbox/Checkbox.astro?raw';
import testCode from '@patterns/checkbox/Checkbox.test.astro.ts?raw';
import { useTranslation } from '@/i18n';

const locale = 'ja';
const t = useTranslation(locale);

const tocItems = [
  { id: 'demo', text: t('pattern.demo') },
  { id: 'native-html', text: 'ネイティブ HTML' },
  { id: 'accessibility-features', text: t('pattern.accessibility') },
  { id: 'source-code', text: t('pattern.sourceCode') },
  { id: 'usage', text: t('pattern.usage') },
  { id: 'api', text: t('pattern.api') },
  { id: 'testing', text: t('pattern.testing') },
  { id: 'resources', text: t('pattern.resources') },
];
---

<PatternLayout
  title="Checkbox - Astro"
  pattern="checkbox"
  framework="astro"
  tocItems={tocItems}
  locale={locale}
>
  <header class="mb-8">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-4">
      <h1 class="text-3xl font-bold">Checkbox</h1>
      <AiGuideActions pattern="checkbox" />
    </div>
    <p class="text-muted-foreground text-lg">
      ユーザーがセットから1つ以上のオプションを選択できるコントロール。
    </p>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="checkbox" currentFramework="astro" locale={locale} />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} id="demo" class="mb-4 text-xl font-semibold">{t('pattern.demo')}</Heading>
    <div class="border-border bg-background rounded-lg border p-6">
      <div class="flex flex-col items-start gap-4">
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox id="demo-terms" />
          I agree to the terms and conditions
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox id="demo-newsletter" initialChecked={true} />
          Subscribe to newsletter
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox id="demo-select-all" indeterminate={true} />
          Select all items
        </label>
        <label class="inline-flex cursor-not-allowed items-center gap-2 font-medium opacity-50">
          <Checkbox id="demo-disabled" disabled />
          Unavailable option (disabled)
        </label>
      </div>
    </div>
  </section>

  <!-- Native HTML Section -->
  <section class="mb-12">
    <Heading level={2} id="native-html" class="mb-4 text-xl font-semibold">ネイティブ HTML</Heading>
    <NativeHtmlNotice locale="ja" />
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} id="accessibility-features" class="mb-4 text-xl font-semibold"
      >{t('pattern.accessibility')}</Heading
    >
    <AccessibilityDocs locale="ja" />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} id="source-code" class="mb-4 text-xl font-semibold"
      >{t('pattern.sourceCode')}</Heading
    >
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={sourceCode}
      lang="astro"
      title="Checkbox.astro"
    />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} id="usage" class="mb-4 text-xl font-semibold">{t('pattern.usage')}</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`---
import Checkbox from './Checkbox.astro';
---

<form>
  <!-- With wrapping label -->
  <label class="inline-flex items-center gap-2">
    <Checkbox name="terms" />
    I agree to the terms and conditions
  </label>

  <!-- With separate label -->
  <label for="newsletter">Subscribe to newsletter</label>
  <Checkbox id="newsletter" name="newsletter" initialChecked={true} />

  <!-- Indeterminate state for "select all" -->
  <label class="inline-flex items-center gap-2">
    <Checkbox indeterminate />
    Select all items
  </label>
</form>

<script>
  // Listen for change events
  document.querySelectorAll('apg-checkbox').forEach((checkbox) => {
    checkbox.addEventListener('checkedchange', (e) => {
      console.log('Checked:', e.detail.checked);
    });
  });
</script>`}
      lang="astro"
      title="使用例"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} id="api" class="mb-4 text-xl font-semibold">{t('pattern.api')}</Heading>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">プロパティ</th>
            <th class="py-2 pr-4 text-left">型</th>
            <th class="py-2 pr-4 text-left">デフォルト</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>initialChecked</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">初期のチェック状態</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>indeterminate</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">チェックボックスが不確定（混在）状態かどうか</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">チェックボックスが無効かどうか</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>name</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">フォームフィールド名</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>value</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">フォームフィールド値</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>id</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">外部ラベルとの関連付け用ID</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>class</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">""</td>
            <td class="py-2">追加のCSSクラス</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mt-6 mb-3 text-lg font-medium">カスタムイベント</h3>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">イベント</th>
            <th class="py-2 pr-4 text-left">詳細</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>checkedchange</code></td>
            <td class="text-muted-foreground py-2 pr-4">{'{ checked: boolean }'}</td>
            <td class="py-2">チェックボックスの状態が変更されたときに発火</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} id="testing" class="mb-4 text-xl font-semibold"
      >{t('pattern.testing')}</Heading
    >
    <TestingDocs locale="ja" />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="typescript"
        title="Checkbox.test.astro.ts"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} id="resources" class="mb-4 text-xl font-semibold"
      >{t('pattern.resources')}</Heading
    >
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/checkbox/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Checkbox パターン
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/checkbox"
          class="text-primary hover:underline"
        >
          MDN: &lt;input type="checkbox"&gt;
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="checkbox" />
    </ul>
  </section>
</PatternLayout>
