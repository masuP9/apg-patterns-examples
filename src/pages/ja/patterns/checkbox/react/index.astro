---
import PatternLayout from '../../../../../layouts/PatternLayout.astro';
import { Checkbox } from '@patterns/checkbox/Checkbox';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideBadge from '@/components/ui/AiGuideBadge.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/checkbox/AccessibilityDocs.astro';
import TestingDocs from '@patterns/checkbox/TestingDocs.astro';
import NativeHtmlNotice from '@patterns/checkbox/NativeHtmlNotice.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/checkbox/Checkbox.tsx?raw';
import testCode from '@patterns/checkbox/Checkbox.test.tsx?raw';
import { useTranslation } from '@/i18n';

const locale = 'ja';
const t = useTranslation(locale);

const tocItems = [
  { id: 'demo', text: t('pattern.demo') },
  { id: 'native-html', text: 'Native HTML' },
  { id: 'accessibility-features', text: t('pattern.accessibility') },
  { id: 'source-code', text: t('pattern.sourceCode') },
  { id: 'usage', text: t('pattern.usage') },
  { id: 'api', text: t('pattern.api') },
  { id: 'testing', text: t('pattern.testing') },
  { id: 'resources', text: t('pattern.resources') },
];
---

<PatternLayout
  title="チェックボックス - React"
  pattern="checkbox"
  framework="react"
  tocItems={tocItems}
  locale={locale}
>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Checkbox</h1>
    <p class="text-muted-foreground text-lg">
      2状態（チェック済み/未チェック）および3状態（チェック済み/未チェック/部分的にチェック）をサポートします。
    </p>
    <AiGuideBadge pattern="checkbox" />
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="checkbox" currentFramework="react" locale={locale} />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.demo')}</Heading>
    <div class="border-border bg-background rounded-lg border p-6">
      <div class="flex flex-col items-start gap-4">
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-terms" />
          I agree to the terms and conditions
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-newsletter" initialChecked={true} />
          Subscribe to newsletter
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-select-all" indeterminate={true} />
          Select all items
        </label>
        <label class="inline-flex cursor-not-allowed items-center gap-2 font-medium opacity-50">
          <Checkbox client:load id="demo-disabled" disabled />
          Unavailable option (disabled)
        </label>
      </div>
    </div>
  </section>

  <!-- Native HTML Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Native HTML</Heading>
    <NativeHtmlNotice />
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.accessibility')}</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.sourceCode')}</Heading>
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="tsx" title="Checkbox.tsx" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.usage')}</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import { Checkbox } from './Checkbox';

function App() {
  return (
    <form>
      {/* With wrapping label */}
      <label className="inline-flex items-center gap-2">
        <Checkbox
          name="terms"
          onCheckedChange={(checked) => console.log('Checked:', checked)}
        />
        I agree to the terms and conditions
      </label>

      {/* With separate label */}
      <label htmlFor="newsletter">Subscribe to newsletter</label>
      <Checkbox id="newsletter" name="newsletter" initialChecked={true} />

      {/* Indeterminate state for "select all" */}
      <label className="inline-flex items-center gap-2">
        <Checkbox indeterminate aria-label="Select all items" />
        Select all items
      </label>
    </form>
  );
}`}
      lang="tsx"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.api')}</Heading>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>initialChecked</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Initial checked state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>indeterminate</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Whether the checkbox is in an indeterminate (mixed) state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onCheckedChange</code></td>
            <td class="text-muted-foreground py-2 pr-4">(checked: boolean) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Callback when state changes</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Whether the checkbox is disabled</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>name</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Form field name</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>value</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Form field value</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>id</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">ID for external label association</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
    <p class="text-muted-foreground mt-4 text-sm">
      その他すべてのプロパティは、基礎となる <code>&lt;input&gt;</code> 要素に渡されます。
    </p>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.testing')}</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="tsx"
        title="Checkbox.test.tsx"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">{t('pattern.resources')}</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/checkbox/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Checkbox パターン
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/checkbox"
          class="text-primary hover:underline"
        >
          MDN: &lt;input type="checkbox"&gt;
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="checkbox" />
    </ul>
  </section>
</PatternLayout>
