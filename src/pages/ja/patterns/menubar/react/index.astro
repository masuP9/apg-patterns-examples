---
import PatternLayout from '../../../../../layouts/PatternLayout.astro';
import { useTranslation } from '@/i18n';
import { BasicMenubarDemo } from '@patterns/menubar/MenubarDemo';
import AccessibilityDocs from '@patterns/menubar/AccessibilityDocs.astro';
import TestingDocs from '@patterns/menubar/TestingDocs.astro';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideActions from '@/components/ui/AiGuideActions.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/menubar/Menubar.tsx?raw';

const locale = 'ja';
const t = useTranslation(locale);

const tocItems = [
  { id: 'demo', text: t('pattern.demo') },
  { id: 'accessibility-features', text: t('pattern.accessibility') },
  { id: 'source-code', text: t('pattern.sourceCode') },
  { id: 'usage', text: t('pattern.usage') },
  { id: 'api', text: t('pattern.api') },
  { id: 'testing', text: t('pattern.testing') },
  { id: 'resources', text: t('pattern.resources') },
];
---

<PatternLayout
  title="メニューバー - React"
  pattern="menubar"
  framework="react"
  tocItems={tocItems}
  locale={locale}
>
  <header class="mb-8">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-4">
      <h1 class="text-3xl font-bold">Menubar</h1>
      <AiGuideActions pattern="menubar" />
    </div>
    <p class="text-muted-foreground text-lg">
      ドロップダウンメニュー、サブメニュー、チェックボックス、ラジオグループをサポートする、アプリケーションスタイルの水平メニューバー。
    </p>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="menubar" currentFramework="react" locale={locale} />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} id="demo" class="mb-4 text-xl font-semibold">{t('pattern.demo')}</Heading>

    <!-- Full Featured -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">フル機能のメニューバー</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        サブメニュー、チェックボックス、ラジオグループ、区切り線、無効な項目を含みます。
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <BasicMenubarDemo client:load />
      </div>
    </div>
    <p class="text-muted-foreground mt-2 text-sm">
      <a href="./demo/" class="text-primary hover:underline">デモのみ表示 →</a>
    </p>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} id="accessibility-features" class="mb-4 text-xl font-semibold">
      {t('pattern.accessibility')}
    </Heading>
    <AccessibilityDocs locale="ja" />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} id="source-code" class="mb-4 text-xl font-semibold">
      {t('pattern.sourceCode')}
    </Heading>
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="tsx" title="Menubar.tsx" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} id="usage" class="mb-4 text-xl font-semibold">{t('pattern.usage')}</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import { Menubar, type MenubarItem } from './Menubar';
import '@patterns/menubar/menubar.css';

const menuItems: MenubarItem[] = [
  {
    id: 'file',
    label: 'File',
    items: [
      { type: 'item', id: 'new', label: 'New' },
      { type: 'item', id: 'open', label: 'Open' },
      { type: 'separator', id: 'sep1' },
      { type: 'item', id: 'save', label: 'Save' },
    ],
  },
  {
    id: 'edit',
    label: 'Edit',
    items: [
      { type: 'item', id: 'cut', label: 'Cut' },
      { type: 'item', id: 'copy', label: 'Copy' },
      { type: 'item', id: 'paste', label: 'Paste' },
    ],
  },
];

<Menubar
  items={menuItems}
  aria-label="Application"
  onItemSelect={(id) => console.log('Selected:', id)}
/>`}
      lang="tsx"
      title="使用例"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} id="api" class="mb-4 text-xl font-semibold">{t('pattern.api')}</Heading>

    <h3 class="mb-3 text-lg font-medium">Menubar Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">型</th>
            <th class="py-2 pr-4 text-left">デフォルト</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>items</code></td>
            <td class="text-muted-foreground py-2 pr-4">MenubarItem[]</td>
            <td class="text-muted-foreground py-2 pr-4">必須</td>
            <td class="py-2">トップレベルのメニュー項目の配列</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-label</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">アクセシブルな名前（aria-labelledbyがない場合は必須）</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-labelledby</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">ラベリング要素のID</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onItemSelect</code></td>
            <td class="text-muted-foreground py-2 pr-4">(id: string) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">項目がアクティブ化されたときのコールバック</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>className</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">''</td>
            <td class="py-2">追加のCSSクラス</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} id="testing" class="mb-4 text-xl font-semibold">
      {t('pattern.testing')}
    </Heading>
    <TestingDocs locale="ja" />
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} id="resources" class="mb-4 text-xl font-semibold">
      {t('pattern.resources')}
    </Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/menubar/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Menubar パターン
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="menubar" />
    </ul>
  </section>
</PatternLayout>
