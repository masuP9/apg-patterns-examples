---
/**
 * Demo-only Page: Slider (Vue) - Japanese
 *
 * This page renders the Slider component in isolation without
 * the site layout. This ensures clean E2E testing environment.
 */
import '@/styles/global.css';
import Slider from '@patterns/slider/Slider.vue';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>デモ: Slider (Vue)</title>
  </head>
  <body class="p-8">
    <div class="flex flex-col gap-8">
      <!-- Basic slider with label -->
      <div>
        <Slider client:load default-value={50} label="Volume" format="{value}%" />
      </div>

      <!-- Slider with custom range -->
      <div>
        <Slider
          client:load
          default-value={3}
          min={1}
          max={5}
          step={1}
          label="Rating"
          format="{value} of {max}"
        />
      </div>

      <!-- Vertical slider -->
      <div>
        <Slider
          client:load
          default-value={50}
          label="Vertical"
          orientation="vertical"
          format="{value}%"
        />
      </div>

      <!-- Disabled slider -->
      <div>
        <Slider client:load default-value={50} label="Disabled" disabled format="{value}%" />
      </div>
    </div>
  </body>
</html>
