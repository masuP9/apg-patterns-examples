---
import PatternLayout from '../../../../../layouts/PatternLayout.astro';
import {
  ToolbarToggleDemo,
  ToolbarToggleDefaultDemo,
  TextFormattingToolbarDemo,
  VerticalToolbarDemo,
  DisabledItemsToolbarDemo,
} from '@patterns/toolbar/ToolbarToggleDemo';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideBadge from '@/components/ui/AiGuideBadge.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/toolbar/AccessibilityDocs.ja.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/toolbar/Toolbar.tsx?raw';
import TestingDocs from '@patterns/toolbar/TestingDocs.ja.astro';
import testCode from '@patterns/toolbar/Toolbar.test.tsx?raw';
import { useTranslation } from '@/i18n';

const locale = 'ja';
const t = useTranslation(locale);

const tocItems = [
  { id: 'demo', text: t('pattern.demo') },
  { id: 'accessibility', text: t('pattern.accessibility') },
  { id: 'source-code', text: t('pattern.sourceCode') },
  { id: 'usage', text: t('pattern.usage') },
  { id: 'api', text: t('pattern.api') },
  { id: 'testing', text: t('pattern.testing') },
  { id: 'resources', text: t('pattern.resources') },
];
---

<PatternLayout
  title="ツールバー - React"
  pattern="toolbar"
  framework="react"
  tocItems={tocItems}
  locale={locale}
>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Toolbar</h1>
    <p class="text-muted-foreground text-lg">
      ボタン、トグルボタン、チェックボックスなどのコントロールセットをグループ化するコンテナ。
    </p>
    <AiGuideBadge pattern="toolbar" />
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="toolbar" currentFramework="react" locale={locale} />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} id="demo" class="mb-4 text-xl font-semibold">{t('pattern.demo')}</Heading>

    <!-- Text Formatting Toolbar -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">テキスト書式設定ツールバー</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        トグルボタンと通常ボタンを含む水平ツールバー。
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <TextFormattingToolbarDemo client:load />
      </div>
    </div>

    <!-- Vertical Toolbar -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">垂直ツールバー</h3>
      <p class="text-muted-foreground mb-4 text-sm">上下矢印キーでナビゲートできます。</p>
      <div class="border-border bg-background rounded-lg border p-6">
        <VerticalToolbarDemo client:load />
      </div>
    </div>

    <!-- With Disabled Items -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">無効化されたアイテムを含む</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        無効化されたアイテムはキーボードナビゲーション時にスキップされます。
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <DisabledItemsToolbarDemo client:load />
      </div>
    </div>

    <!-- Controlled Toggle Buttons -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">制御されたトグルボタン</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        制御された状態を持つトグルボタン。現在の状態が表示され、サンプルテキストに適用されます。
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <ToolbarToggleDemo client:load />
      </div>
    </div>

    <!-- Default Pressed States -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">デフォルトの押下状態</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        <code>defaultPressed</code>で初期状態を設定したトグルボタン（無効化状態を含む）。
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <ToolbarToggleDefaultDemo client:load />
      </div>
    </div>
    <p class="text-muted-foreground mt-2 text-sm">
      <a href="./demo/" class="text-primary hover:underline">デモのみを開く →</a>
    </p>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} id="accessibility-features" class="mb-4 text-xl font-semibold"
      >{t('pattern.accessibility')}</Heading
    >
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} id="source-code" class="mb-4 text-xl font-semibold"
      >{t('pattern.sourceCode')}</Heading
    >
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="tsx" title="Toolbar.tsx" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} id="usage" class="mb-4 text-xl font-semibold">{t('pattern.usage')}</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import {
  Toolbar,
  ToolbarButton,
  ToolbarToggleButton,
  ToolbarSeparator
} from '@patterns/toolbar/Toolbar';

// Basic usage
<Toolbar aria-label="Text formatting">
  <ToolbarToggleButton>Bold</ToolbarToggleButton>
  <ToolbarToggleButton>Italic</ToolbarToggleButton>
  <ToolbarSeparator />
  <ToolbarButton>Copy</ToolbarButton>
  <ToolbarButton>Paste</ToolbarButton>
</Toolbar>

// Vertical toolbar
<Toolbar orientation="vertical" aria-label="Actions">
  <ToolbarButton>New</ToolbarButton>
  <ToolbarButton>Open</ToolbarButton>
  <ToolbarButton>Save</ToolbarButton>
</Toolbar>

// Controlled toggle button
const [isBold, setIsBold] = useState(false);

<Toolbar aria-label="Formatting">
  <ToolbarToggleButton
    pressed={isBold}
    onPressedChange={setIsBold}
  >
    Bold
  </ToolbarToggleButton>
</Toolbar>`}
      lang="tsx"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} id="api" class="mb-4 text-xl font-semibold">{t('pattern.api')}</Heading>

    <h3 class="mb-3 text-lg font-medium">Toolbar Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">プロパティ</th>
            <th class="py-2 pr-4 text-left">型</th>
            <th class="py-2 pr-4 text-left">デフォルト</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>orientation</code></td>
            <td class="py-2 pr-4"><code>'horizontal' | 'vertical'</code></td>
            <td class="py-2 pr-4"><code>'horizontal'</code></td>
            <td class="py-2">ツールバーの方向</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-label</code></td>
            <td class="py-2 pr-4"><code>string</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">ツールバーのアクセシブルラベル</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="py-2 pr-4"><code>React.ReactNode</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">ツールバーのコンテンツ</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">ToolbarButton Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">プロパティ</th>
            <th class="py-2 pr-4 text-left">型</th>
            <th class="py-2 pr-4 text-left">デフォルト</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">ボタンが無効化されているかどうか</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onClick</code></td>
            <td class="py-2 pr-4"><code>() =&gt; void</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">クリックハンドラー</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">ToolbarToggleButton Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">プロパティ</th>
            <th class="py-2 pr-4 text-left">型</th>
            <th class="py-2 pr-4 text-left">デフォルト</th>
            <th class="py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>pressed</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">制御された押下状態</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>defaultPressed</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">初期押下状態（非制御）</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onPressedChange</code></td>
            <td class="py-2 pr-4"><code>(pressed: boolean) =&gt; void</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">押下状態が変更された時のコールバック</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">ボタンが無効化されているかどうか</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} id="testing" class="mb-4 text-xl font-semibold"
      >{t('pattern.testing')}</Heading
    >
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="tsx"
        title="Toolbar.test.tsx"
      />
    </div>
  </section>

  <!-- Resources Section -->
  <section class="mb-12">
    <Heading level={2} id="resources" class="mb-4 text-xl font-semibold"
      >{t('pattern.resources')}</Heading
    >
    <ul class="list-inside list-disc space-y-2">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/toolbar/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Toolbar パターン
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://w3c.github.io/aria/#toolbar"
          class="text-primary hover:underline"
        >
          WAI-ARIA: toolbar role
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="toolbar" />
    </ul>
  </section>
</PatternLayout>
