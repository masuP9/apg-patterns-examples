---
/**
 * Demo-only Page: Accordion (Astro)
 *
 * This page renders the Accordion component in isolation without
 * the site layout. This ensures clean E2E testing environment.
 */
import '@/styles/global.css';
import Accordion from '@patterns/accordion/Accordion.astro';

const defaultItems = [
  {
    id: 'section1',
    header: 'What is an Accordion?',
    content:
      'An accordion is a vertically stacked set of interactive headings that each reveal a section of content.',
    defaultExpanded: true,
  },
  {
    id: 'section2',
    header: 'When to use an Accordion?',
    content: 'Use accordions when you need to organize content into collapsible sections.',
  },
  {
    id: 'section3',
    header: 'Accessibility Considerations',
    content:
      'Accordions must be keyboard accessible and properly announce their expanded/collapsed state to screen readers.',
  },
];

const multipleItems = [
  {
    id: 'multi1',
    header: 'Section One',
    content: 'Content for section one. With allowMultiple enabled, multiple sections can be open.',
  },
  {
    id: 'multi2',
    header: 'Section Two',
    content: 'Content for section two.',
  },
  {
    id: 'multi3',
    header: 'Section Three',
    content: 'Content for section three.',
  },
];

const disabledItems = [
  {
    id: 'dis1',
    header: 'Available Section',
    content: 'This section can be expanded and collapsed normally.',
  },
  {
    id: 'dis2',
    header: 'Disabled Section',
    content: 'This content is not accessible because the section is disabled.',
    disabled: true,
  },
  {
    id: 'dis3',
    header: 'Another Available Section',
    content: 'This section can also be expanded.',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Demo: Accordion (Astro)</title>
  </head>
  <body class="p-8">
    <div class="space-y-8">
      <div>
        <h2 class="mb-4 text-lg font-semibold">Single Expansion</h2>
        <Accordion items={defaultItems} headingLevel={3} />
      </div>

      <div>
        <h2 class="mb-4 text-lg font-semibold">Multiple Expansion</h2>
        <Accordion items={multipleItems} allowMultiple={true} headingLevel={3} />
      </div>

      <div>
        <h2 class="mb-4 text-lg font-semibold">With Disabled Items</h2>
        <Accordion items={disabledItems} headingLevel={3} />
      </div>
    </div>
  </body>
</html>
