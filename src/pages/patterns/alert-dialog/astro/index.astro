---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import AlertDialog from '@patterns/alert-dialog/AlertDialog.astro';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideBadge from '@/components/ui/AiGuideBadge.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/alert-dialog/AccessibilityDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/alert-dialog/AlertDialog.astro?raw';
import TestingDocs from '@patterns/alert-dialog/TestingDocs.astro';
import testCode from '@patterns/alert-dialog/AlertDialog.test.astro.ts?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout
  title="Alert Dialog - Astro"
  pattern="alert-dialog"
  framework="astro"
  tocItems={tocItems}
>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Alert Dialog</h1>
    <p class="text-muted-foreground text-lg">
      A modal dialog that interrupts the user's workflow to communicate an important message and
      require a response.
    </p>
    <AiGuideBadge pattern="alert-dialog" />
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="alert-dialog" currentFramework="astro" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>
    <p class="text-muted-foreground mb-4">
      Try the alert dialogs below. Note that Escape key is disabled by default for critical
      confirmations, and initial focus goes to the Cancel button (the safest action).
    </p>

    <!-- Delete Confirmation -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Delete Confirmation</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        A destructive action that requires explicit confirmation. Escape key is disabled.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <AlertDialog
          title="Delete this item?"
          message="This action cannot be undone. This will permanently delete the item from your account."
          triggerText="Delete Item"
          confirmLabel="Delete"
          cancelLabel="Cancel"
          confirmVariant="danger"
          triggerClass="bg-destructive text-destructive-foreground rounded-md px-4 py-2 hover:opacity-90"
        />
      </div>
    </div>

    <!-- Discard Changes -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Discard Changes</h3>
      <p class="text-muted-foreground mb-4 text-sm">Confirm before losing unsaved changes.</p>
      <div class="border-border bg-background rounded-lg border p-6">
        <AlertDialog
          title="Discard unsaved changes?"
          message="You have unsaved changes. Are you sure you want to discard them?"
          triggerText="Close Editor"
          confirmLabel="Discard"
          cancelLabel="Keep Editing"
          triggerClass="bg-secondary text-secondary-foreground rounded-md px-4 py-2 hover:opacity-90"
        />
      </div>
    </div>

    <!-- Information Acknowledgment -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Information Acknowledgment</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        Non-destructive alert with Escape key enabled.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <AlertDialog
          title="System Maintenance"
          message="The system will undergo maintenance on Sunday at 2:00 AM. Please save your work before then."
          triggerText="Show Notice"
          confirmLabel="Understood"
          cancelLabel="Remind Me Later"
          allowEscapeClose={true}
          triggerClass="bg-primary text-primary-foreground rounded-md px-4 py-2 hover:opacity-90"
        />
      </div>
    </div>
    <p class="text-muted-foreground mt-4 text-sm">
      <a href="./demo/" class="text-primary hover:underline">Open demo only â†’</a>
    </p>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility Features</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={sourceCode}
      lang="astro"
      title="AlertDialog.astro"
    />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`---
import AlertDialog from './AlertDialog.astro';
---

<AlertDialog
  title="Delete this item?"
  message="This action cannot be undone. This will permanently delete the item."
  triggerText="Delete Item"
  confirmLabel="Delete"
  cancelLabel="Cancel"
  confirmVariant="danger"
  triggerClass="bg-destructive text-destructive-foreground px-4 py-2 rounded"
/>

<script>
  // Listen for custom events
  document.querySelector('apg-alert-dialog')?.addEventListener('confirm', () => {
    console.log('Confirmed!');
  });
</script>`}
      lang="astro"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>

    <h3 class="mb-3 text-lg font-medium">Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>title</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">Alert dialog title</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>message</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">Alert message (required for accessibility)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>triggerText</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">Trigger button text</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>confirmLabel</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">"OK"</td>
            <td class="py-2">Confirm button label</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>cancelLabel</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">"Cancel"</td>
            <td class="py-2">Cancel button label</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>confirmVariant</code></td>
            <td class="text-muted-foreground py-2 pr-4">'default' | 'danger'</td>
            <td class="text-muted-foreground py-2 pr-4">'default'</td>
            <td class="py-2">Confirm button visual style</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>allowEscapeClose</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Allow closing with Escape key</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>triggerClass</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Additional CSS class for trigger button</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">Custom Events</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Event</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>confirm</code></td>
            <td class="py-2">Fired when Confirm button is clicked</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>cancel</code></td>
            <td class="py-2">Fired when Cancel button is clicked</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>alertdialogopen</code></td>
            <td class="py-2">Fired when dialog opens</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>alertdialogclose</code></td>
            <td class="py-2">Fired when dialog closes</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="typescript"
        title="AlertDialog.test.astro.ts"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/alertdialog/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Alert Dialog Pattern
        </ExternalLink>
      </li>
      <li>
        <AiGuideResourceItem pattern="alert-dialog" />
      </li>
    </ul>
  </section>
</PatternLayout>
