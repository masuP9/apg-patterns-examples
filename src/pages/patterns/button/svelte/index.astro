---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import Heading from '@/components/ui/Heading.astro';
import ToggleButtonDemo from '@patterns/button/ToggleButtonDemo.svelte';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/button/AccessibilityDocs.astro';
import TestingDocs from '@patterns/button/TestingDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import sourceCode from '@patterns/button/ToggleButton.svelte?raw';
import testCode from '@patterns/button/ToggleButton.test.svelte.ts?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout title="Toggle Button - Svelte" pattern="button" framework="svelte" tocItems={tocItems}>
    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-4">Toggle Button</h1>
      <p class="text-lg text-muted-foreground">
        A two-state button that can be either "pressed" or "not pressed".
      </p>
    </header>

    <!-- Framework Selector -->
    <FrameworkTabs pattern="button" currentFramework="svelte" />

    <!-- Demo Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">Demo</Heading>
      <div class="p-6 rounded-lg border border-border bg-background">
        <ToggleButtonDemo client:load />
      </div>
    </section>

    <!-- Accessibility Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">Accessibility Features</Heading>
      <AccessibilityDocs />
    </section>

    <!-- Source Code Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">Source Code</Heading>
      <CodeBlock
        code={sourceCode}
        lang="svelte"
        title="ToggleButton.svelte"
      />
    </section>

    <!-- Usage Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">Usage</Heading>
      <CodeBlock
        code={`<script>
  import ToggleButton from './ToggleButton.svelte';

  function handleToggle(pressed) {
    console.log('Muted:', pressed);
  }
</script>

<ToggleButton
  initialPressed={false}
  onToggle={handleToggle}
  pressedIndicator="üîá"
  unpressedIndicator="üîä"
>
  Mute
</ToggleButton>`}
        lang="svelte"
        title="Example"
      />
    </section>

    <!-- API Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">API</Heading>
      <ResponsiveTable>
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left py-2 pr-4">Prop</th>
              <th class="text-left py-2 pr-4">Type</th>
              <th class="text-left py-2 pr-4">Default</th>
              <th class="text-left py-2">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>initialPressed</code></td>
              <td class="py-2 pr-4 text-muted-foreground">boolean</td>
              <td class="py-2 pr-4 text-muted-foreground">false</td>
              <td class="py-2">Initial pressed state</td>
            </tr>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>onToggle</code></td>
              <td class="py-2 pr-4 text-muted-foreground">(pressed: boolean) =&gt; void</td>
              <td class="py-2 pr-4 text-muted-foreground">-</td>
              <td class="py-2">Callback when state changes</td>
            </tr>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>pressedIndicator</code></td>
              <td class="py-2 pr-4 text-muted-foreground">Snippet | string</td>
              <td class="py-2 pr-4 text-muted-foreground">"‚óè"</td>
              <td class="py-2">Custom indicator for pressed state</td>
            </tr>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>unpressedIndicator</code></td>
              <td class="py-2 pr-4 text-muted-foreground">Snippet | string</td>
              <td class="py-2 pr-4 text-muted-foreground">"‚óã"</td>
              <td class="py-2">Custom indicator for unpressed state</td>
            </tr>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>children</code></td>
              <td class="py-2 pr-4 text-muted-foreground">Snippet | string</td>
              <td class="py-2 pr-4 text-muted-foreground">-</td>
              <td class="py-2">Button label (slot content)</td>
            </tr>
          </tbody>
        </table>
      </ResponsiveTable>
    </section>

    <!-- Testing Section -->
    <section class="mb-12">
      <Heading level={2} class="text-xl font-semibold mb-4">Testing</Heading>
      <TestingDocs />
      <div class="mt-6">
        <CodeBlock
          code={testCode}
          lang="typescript"
          title="ToggleButton.test.svelte.ts"
        />
      </div>
    </section>

    <!-- Resources -->
    <section>
      <Heading level={2} class="text-xl font-semibold mb-4">Resources</Heading>
      <ul class="list-disc pl-6 space-y-2">
        <li>
          <ExternalLink
            href="https://www.w3.org/WAI/ARIA/apg/patterns/button/"
            class="text-primary hover:underline"
          >
            WAI-ARIA APG: Button Pattern
          </ExternalLink>
        </li>
      </ul>
    </section>
</PatternLayout>
