---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import Heading from '@/components/ui/Heading.astro';
import ToggleButtonDemo from '@patterns/button/ToggleButtonDemo.svelte';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/button/AccessibilityDocs.astro';
import TestingDocs from '@patterns/button/TestingDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import sourceCode from '@patterns/button/ToggleButton.svelte?raw';
import testCode from '@patterns/button/ToggleButton.test.svelte.ts?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout
  title="Toggle Button - Svelte"
  pattern="button"
  framework="svelte"
  tocItems={tocItems}
>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Toggle Button</h1>
    <p class="text-muted-foreground text-lg">
      A two-state button that can be either "pressed" or "not pressed".
    </p>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="button" currentFramework="svelte" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>
    <div class="border-border bg-background rounded-lg border p-6">
      <ToggleButtonDemo client:load />
    </div>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility Features</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock code={sourceCode} lang="svelte" title="ToggleButton.svelte" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      code={`<script>
  import ToggleButton from './ToggleButton.svelte';

  function handleToggle(pressed) {
    console.log('Muted:', pressed);
  }
</script>

<ToggleButton
  initialPressed={false}
  onToggle={handleToggle}
  pressedIndicator="üîá"
  unpressedIndicator="üîä"
>
  Mute
</ToggleButton>`}
      lang="svelte"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>initialPressed</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Initial pressed state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onToggle</code></td>
            <td class="text-muted-foreground py-2 pr-4">(pressed: boolean) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Callback when state changes</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>pressedIndicator</code></td>
            <td class="text-muted-foreground py-2 pr-4">Snippet | string</td>
            <td class="text-muted-foreground py-2 pr-4">"‚óè"</td>
            <td class="py-2">Custom indicator for pressed state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>unpressedIndicator</code></td>
            <td class="text-muted-foreground py-2 pr-4">Snippet | string</td>
            <td class="text-muted-foreground py-2 pr-4">"‚óã"</td>
            <td class="py-2">Custom indicator for unpressed state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="text-muted-foreground py-2 pr-4">Snippet | string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Button label (slot content)</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock code={testCode} lang="typescript" title="ToggleButton.test.svelte.ts" />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/button/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Button Pattern
        </ExternalLink>
      </li>
    </ul>
  </section>
</PatternLayout>
