---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import ToggleButton from '@patterns/button/ToggleButton.vue';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/button/AccessibilityDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import sourceCode from '@patterns/button/ToggleButton.vue?raw';
import { withBase } from '@/lib/utils';
---

<PatternLayout title="Toggle Button - Vue" pattern="button" framework="vue">
  <nav class="mb-6 text-sm">
    <a href={withBase('/patterns/')} class="text-primary hover:underline">Patterns</a>
    <span class="mx-2 text-muted-foreground">/</span>
    <span>Toggle Button</span>
  </nav>

    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-4">Toggle Button</h1>
      <p class="text-lg text-muted-foreground">
        A two-state button that can be either "pressed" or "not pressed".
      </p>
    </header>

    <!-- Framework Selector -->
    <FrameworkTabs pattern="button" currentFramework="vue" />

    <!-- Demo Section -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4">Demo</h2>
      <div class="p-6 rounded-lg border border-border bg-background">
        <div class="flex flex-wrap gap-4">
          <ToggleButton client:load>
            Mute
          </ToggleButton>
          <ToggleButton client:load initial-pressed>
            Dark Mode
          </ToggleButton>
          <ToggleButton client:load disabled>
            Disabled
          </ToggleButton>
        </div>
      </div>
    </section>

    <!-- Accessibility Section -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4">Accessibility Features</h2>
      <AccessibilityDocs />
    </section>

    <!-- Source Code Section -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4">Source Code</h2>
      <CodeBlock
        code={sourceCode}
        lang="vue"
        title="ToggleButton.vue"
      />
    </section>

    <!-- Usage Section -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4">Usage</h2>
      <CodeBlock
        code={`<script setup>
import ToggleButton from './ToggleButton.vue';

const handleToggle = (pressed) => {
  console.log('Pressed:', pressed);
};
</script>

<template>
  <ToggleButton
    :initial-pressed="false"
    @toggle="handleToggle"
  >
    Toggle Me
  </ToggleButton>
</template>`}
        lang="vue"
        title="Example"
      />
    </section>

    <!-- API Section -->
    <section class="mb-12">
      <h2 class="text-xl font-semibold mb-4">API</h2>

      <h3 class="text-lg font-medium mb-2">Props</h3>
      <ResponsiveTable class="mb-6">
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left py-2 pr-4">Prop</th>
              <th class="text-left py-2 pr-4">Type</th>
              <th class="text-left py-2 pr-4">Default</th>
              <th class="text-left py-2">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>initialPressed</code></td>
              <td class="py-2 pr-4 text-muted-foreground">boolean</td>
              <td class="py-2 pr-4 text-muted-foreground">false</td>
              <td class="py-2">Initial pressed state</td>
            </tr>
          </tbody>
        </table>
      </ResponsiveTable>

      <h3 class="text-lg font-medium mb-2">Events</h3>
      <ResponsiveTable>
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-border">
              <th class="text-left py-2 pr-4">Event</th>
              <th class="text-left py-2 pr-4">Payload</th>
              <th class="text-left py-2">Description</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-border">
              <td class="py-2 pr-4"><code>toggle</code></td>
              <td class="py-2 pr-4 text-muted-foreground">boolean</td>
              <td class="py-2">Emitted when state changes</td>
            </tr>
          </tbody>
        </table>
      </ResponsiveTable>

      <p class="mt-4 text-sm text-muted-foreground">
        All other attributes are passed to the underlying <code>&lt;button&gt;</code> element via <code>v-bind="$attrs"</code>.
      </p>
    </section>

    <!-- Resources -->
    <section>
      <h2 class="text-xl font-semibold mb-4">Resources</h2>
      <ul class="list-disc pl-6 space-y-2">
        <li>
          <ExternalLink
            href="https://www.w3.org/WAI/ARIA/apg/patterns/button/"
            class="text-primary hover:underline"
          >
            WAI-ARIA APG: Button Pattern
          </ExternalLink>
        </li>
      </ul>
    </section>
</PatternLayout>
