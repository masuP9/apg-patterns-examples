---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import Checkbox from '@patterns/checkbox/Checkbox.vue';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/checkbox/AccessibilityDocs.astro';
import TestingDocs from '@patterns/checkbox/TestingDocs.astro';
import NativeHtmlNotice from '@patterns/checkbox/NativeHtmlNotice.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/checkbox/Checkbox.vue?raw';
import testCode from '@patterns/checkbox/Checkbox.test.vue.ts?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'native-html', text: 'Native HTML' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout title="Checkbox - Vue" pattern="checkbox" framework="vue" tocItems={tocItems}>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Checkbox</h1>
    <p class="text-muted-foreground text-lg">
      A control that allows users to select one or more options from a set.
    </p>
    <a
      href="/patterns/checkbox/llm.md"
      target="_blank"
      rel="noopener noreferrer"
      class="mt-4 inline-flex items-center gap-1.5 rounded-full border border-blue-200 bg-blue-50 px-3 py-1 text-sm text-blue-700 transition-colors hover:bg-blue-100 dark:border-blue-800 dark:bg-blue-950 dark:text-blue-300 dark:hover:bg-blue-900"
    >
      <span class="text-base">ðŸ¤–</span>
      AI Implementation Guide
    </a>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="checkbox" currentFramework="vue" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>
    <div class="border-border bg-background rounded-lg border p-6">
      <div class="flex flex-col items-start gap-4">
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-terms" />
          I agree to the terms and conditions
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-newsletter" initialChecked={true} />
          Subscribe to newsletter
        </label>
        <label class="inline-flex cursor-pointer items-center gap-2 font-medium">
          <Checkbox client:load id="demo-select-all" indeterminate={true} />
          Select all items
        </label>
        <label class="inline-flex cursor-not-allowed items-center gap-2 font-medium opacity-50">
          <Checkbox client:load id="demo-disabled" disabled />
          Unavailable option (disabled)
        </label>
      </div>
    </div>
  </section>

  <!-- Native HTML Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Native HTML</Heading>
    <NativeHtmlNotice />
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility Features</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="vue" title="Checkbox.vue" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`<script setup>
import Checkbox from './Checkbox.vue';

function handleChange(checked) {
  console.log('Checked:', checked);
}
</script>

<template>
  <form>
    <!-- With wrapping label -->
    <label class="inline-flex items-center gap-2">
      <Checkbox name="terms" @change="handleChange" />
      I agree to the terms and conditions
    </label>

    <!-- With separate label -->
    <label for="newsletter">Subscribe to newsletter</label>
    <Checkbox id="newsletter" name="newsletter" :initial-checked="true" />

    <!-- Indeterminate state for "select all" -->
    <label class="inline-flex items-center gap-2">
      <Checkbox indeterminate aria-label="Select all items" />
      Select all items
    </label>
  </form>
</template>`}
      lang="vue"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>initialChecked</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Initial checked state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>indeterminate</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Whether the checkbox is in an indeterminate (mixed) state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Whether the checkbox is disabled</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>name</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Form field name</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>value</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Form field value</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mt-6 mb-3 text-lg font-medium">Events</h3>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Event</th>
            <th class="py-2 pr-4 text-left">Payload</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>@change</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="py-2">Emitted when state changes</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <p class="text-muted-foreground mt-4 text-sm">
      All other props are passed to the underlying <code>&lt;input&gt;</code> element.
    </p>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="typescript"
        title="Checkbox.test.vue.ts"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/checkbox/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Checkbox Pattern
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/checkbox"
          class="text-primary hover:underline"
        >
          MDN: &lt;input type="checkbox"&gt;
        </ExternalLink>
      </li>
      <li>
        <ExternalLink href="/patterns/checkbox/llm.md" class="text-primary hover:underline">
          AI Implementation Guide (llm.md)
        </ExternalLink>
        <span class="text-muted-foreground text-sm">
          - ARIA specs, keyboard support, test checklist</span
        >
      </li>
    </ul>
  </section>
</PatternLayout>
