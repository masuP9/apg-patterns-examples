---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import DialogDemo from '@patterns/dialog/DialogDemo';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/dialog/AccessibilityDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/dialog/Dialog.tsx?raw';
import TestingDocs from '@patterns/dialog/TestingDocs.astro';
import testCode from '@patterns/dialog/Dialog.test.tsx?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout title="Dialog - React" pattern="dialog" framework="react" tocItems={tocItems}>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Dialog (Modal)</h1>
    <p class="text-muted-foreground text-lg">
      A window overlaid on the primary window, rendering the content underneath inert.
    </p>
    <a
      href="https://github.com/masuP9/apg-patterns-examples/blob/main/src/patterns/dialog/llm.md"
      target="_blank"
      rel="noopener noreferrer"
      class="mt-4 inline-flex items-center gap-1.5 rounded-full border border-blue-200 bg-blue-50 px-3 py-1 text-sm text-blue-700 transition-colors hover:bg-blue-100 dark:border-blue-800 dark:bg-blue-950 dark:text-blue-300 dark:hover:bg-blue-900"
    >
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 2a4 4 0 0 1 4 4v2a4 4 0 0 1-8 0V6a4 4 0 0 1 4-4z" />
        <path d="M12 12v8" />
        <path d="M8 16h8" />
      </svg>
      AI Implementation Guide
    </a>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="dialog" currentFramework="react" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>

    <!-- Basic Dialog -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Basic Dialog</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        A simple modal dialog with title, description, and close functionality.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <DialogDemo
          client:only="react"
          title="Dialog Title"
          description="This is a description of the dialog content. It provides additional context for users."
          triggerText="Open Dialog"
          triggerClass="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
        >
          <p class="mb-4">
            This is the main content of the dialog. You can place any content here, such as text,
            forms, or other components.
          </p>
          <p>
            Press <kbd class="rounded bg-gray-100 px-2 py-1 text-sm dark:bg-gray-800">Escape</kbd> or
            click outside to close.
          </p>
        </DialogDemo>
      </div>
    </div>

    <!-- Dialog without description -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Without Description</h3>
      <p class="text-muted-foreground mb-4 text-sm">A dialog with only a title and content.</p>
      <div class="border-border bg-background rounded-lg border p-6">
        <DialogDemo
          client:only="react"
          title="Simple Dialog"
          triggerText="Open Simple Dialog"
          triggerClass="px-4 py-2 bg-secondary text-secondary-foreground rounded-md hover:bg-secondary/90 transition-colors"
        >
          <p>This dialog has no description, only a title and content.</p>
        </DialogDemo>
      </div>
    </div>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility Features</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="tsx" title="Dialog.tsx" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import { DialogRoot, DialogTrigger, Dialog } from './Dialog';

function App() {
  return (
    <DialogRoot onOpenChange={(open) => console.log('Dialog:', open)}>
      <DialogTrigger>Open Dialog</DialogTrigger>
      <Dialog
        title="Dialog Title"
        description="Optional description text"
      >
        <p>Dialog content goes here.</p>
      </Dialog>
    </DialogRoot>
  );
}`}
      lang="tsx"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>

    <h3 class="mb-3 text-lg font-medium">DialogRoot Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="text-muted-foreground py-2 pr-4">ReactNode</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">DialogTrigger and Dialog components</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>defaultOpen</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Initial open state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onOpenChange</code></td>
            <td class="text-muted-foreground py-2 pr-4">(open: boolean) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Callback when open state changes</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">Dialog Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>title</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">Dialog title (for accessibility)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>description</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Optional description text</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="text-muted-foreground py-2 pr-4">ReactNode</td>
            <td class="text-muted-foreground py-2 pr-4">required</td>
            <td class="py-2">Dialog content</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>closeOnOverlayClick</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">true</td>
            <td class="py-2">Close when clicking overlay</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="tsx"
        title="Dialog.test.tsx"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/dialog-modal/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Dialog (Modal) Pattern
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://github.com/masuP9/apg-patterns-examples/blob/main/src/patterns/dialog/llm.md"
          class="text-primary hover:underline"
        >
          AI Implementation Guide (llm.md)
        </ExternalLink>
        <span class="text-muted-foreground text-sm"> - ARIA specs, keyboard support, test checklist</span>
      </li>
    </ul>
  </section>
</PatternLayout>
