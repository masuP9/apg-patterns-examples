---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import { MultiThumbSlider } from '@patterns/slider-multithumb/MultiThumbSlider';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideBadge from '@/components/ui/AiGuideBadge.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/slider-multithumb/AccessibilityDocs.astro';
import TestingDocs from '@patterns/slider-multithumb/TestingDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/slider-multithumb/MultiThumbSlider.tsx?raw';
import testCode from '@patterns/slider-multithumb/MultiThumbSlider.test.tsx?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility-features', text: 'Accessibility Features' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout
  title="Slider (Multi-Thumb) - React"
  pattern="slider-multithumb"
  framework="react"
  tocItems={tocItems}
>
  <header class="mb-8">
    <h1 class="mb-4 text-3xl font-bold">Slider (Multi-Thumb)</h1>
    <p class="text-muted-foreground text-lg">
      A slider with two thumbs that allows users to select a range of values within a given range.
    </p>
    <AiGuideBadge pattern="slider-multithumb" />
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="slider-multithumb" currentFramework="react" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>
    <div class="border-border bg-background rounded-lg border p-6">
      <div class="flex flex-col gap-8">
        <div>
          <MultiThumbSlider
            client:load
            defaultValue={[20, 80]}
            label="Price Range"
            format={'${value}'}
            aria-label={['Minimum Price', 'Maximum Price']}
          />
        </div>
        <div>
          <MultiThumbSlider
            client:load
            defaultValue={[25, 75]}
            label="Temperature Range"
            format={'{value}°C'}
            aria-label={['Minimum Temperature', 'Maximum Temperature']}
          />
        </div>
        <div>
          <MultiThumbSlider
            client:load
            defaultValue={[30, 70]}
            min={0}
            max={100}
            step={5}
            minDistance={10}
            label="Budget Range (with minDistance)"
            format={'${value}'}
            aria-label={['Minimum Budget', 'Maximum Budget']}
          />
        </div>
        <div>
          <MultiThumbSlider
            client:load
            defaultValue={[40, 60]}
            label="Disabled"
            disabled
            format={'{value}%'}
            aria-label={['Lower Value', 'Upper Value']}
          />
        </div>
      </div>
    </div>
    <p class="text-muted-foreground mt-4 text-sm">
      <a href="./demo/" class="text-primary hover:underline">Open demo only →</a>
    </p>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility Features</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={sourceCode}
      lang="tsx"
      title="MultiThumbSlider.tsx"
    />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import { MultiThumbSlider } from './MultiThumbSlider';

function App() {
  return (
    <div>
      {/* Basic usage with visible label and aria-label tuple */}
      <MultiThumbSlider
        defaultValue={[20, 80]}
        label="Price Range"
        aria-label={['Minimum Price', 'Maximum Price']}
      />

      {/* With format for display and aria-valuetext */}
      <MultiThumbSlider
        defaultValue={[25, 75]}
        label="Temperature"
        format="{value}°C"
        aria-label={['Min Temp', 'Max Temp']}
      />

      {/* With minDistance to prevent thumbs from getting too close */}
      <MultiThumbSlider
        defaultValue={[30, 70]}
        minDistance={10}
        label="Budget"
        format="\${value}"
        aria-label={['Min Budget', 'Max Budget']}
      />

      {/* Custom range with step */}
      <MultiThumbSlider
        defaultValue={[200, 800]}
        min={0}
        max={1000}
        step={50}
        label="Price Filter"
        format="\${value}"
        aria-label={['Min Price', 'Max Price']}
      />

      {/* With callbacks */}
      <MultiThumbSlider
        defaultValue={[20, 80]}
        label="Range"
        aria-label={['Lower', 'Upper']}
        onValueChange={(values, activeIndex) => {
          console.log('Changed:', values, 'Active thumb:', activeIndex);
        }}
        onValueCommit={(values) => {
          console.log('Committed:', values);
        }}
      />

      {/* Using aria-labelledby for external labels */}
      <span id="min-label">Minimum</span>
      <span id="max-label">Maximum</span>
      <MultiThumbSlider
        defaultValue={[20, 80]}
        aria-labelledby={['min-label', 'max-label']}
      />
    </div>
  );
}`}
      lang="tsx"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>defaultValue</code></td>
            <td class="text-muted-foreground py-2 pr-4">[number, number]</td>
            <td class="text-muted-foreground py-2 pr-4">[min, max]</td>
            <td class="py-2">Initial values for the two thumbs [lower, upper]</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>min</code></td>
            <td class="text-muted-foreground py-2 pr-4">number</td>
            <td class="text-muted-foreground py-2 pr-4">0</td>
            <td class="py-2">Minimum value (absolute)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>max</code></td>
            <td class="text-muted-foreground py-2 pr-4">number</td>
            <td class="text-muted-foreground py-2 pr-4">100</td>
            <td class="py-2">Maximum value (absolute)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>step</code></td>
            <td class="text-muted-foreground py-2 pr-4">number</td>
            <td class="text-muted-foreground py-2 pr-4">1</td>
            <td class="py-2">Step increment for keyboard navigation</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>largeStep</code></td>
            <td class="text-muted-foreground py-2 pr-4">number</td>
            <td class="text-muted-foreground py-2 pr-4">step × 10</td>
            <td class="py-2">Large step for PageUp/PageDown</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>minDistance</code></td>
            <td class="text-muted-foreground py-2 pr-4">number</td>
            <td class="text-muted-foreground py-2 pr-4">0</td>
            <td class="py-2">Minimum distance between the two thumbs</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>orientation</code></td>
            <td class="text-muted-foreground py-2 pr-4">'horizontal' | 'vertical'</td>
            <td class="text-muted-foreground py-2 pr-4">'horizontal'</td>
            <td class="py-2">Slider orientation</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">false</td>
            <td class="py-2">Whether the slider is disabled</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>showValues</code></td>
            <td class="text-muted-foreground py-2 pr-4">boolean</td>
            <td class="text-muted-foreground py-2 pr-4">true</td>
            <td class="py-2">Whether to display the value text</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>label</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Visible label for the slider group</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>format</code></td>
            <td class="text-muted-foreground py-2 pr-4">string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2"
              >Format pattern for display and aria-valuetext (e.g., "{'{value}'}%", "${
                '{value}'
              }")</td
            >
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-label</code></td>
            <td class="text-muted-foreground py-2 pr-4">[string, string]</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Accessible labels for each thumb [lower, upper]</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-labelledby</code></td>
            <td class="text-muted-foreground py-2 pr-4">[string, string]</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">IDs of external label elements [lower, upper]</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>getAriaValueText</code></td>
            <td class="text-muted-foreground py-2 pr-4">(value, index) =&gt; string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Function to generate aria-valuetext dynamically</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>getAriaLabel</code></td>
            <td class="text-muted-foreground py-2 pr-4">(index) =&gt; string</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Function to generate aria-label dynamically</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onValueChange</code></td>
            <td class="text-muted-foreground py-2 pr-4">(values, activeIndex) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Callback when any value changes</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onValueCommit</code></td>
            <td class="text-muted-foreground py-2 pr-4">(values) =&gt; void</td>
            <td class="text-muted-foreground py-2 pr-4">-</td>
            <td class="py-2">Callback when interaction ends (drag ends, key up)</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
    <p class="text-muted-foreground mt-4 text-sm">
      <strong>Note:</strong> Either <code>aria-label</code>, <code>aria-labelledby</code>, or
      <code>getAriaLabel</code> is required to provide accessible names for each thumb.
    </p>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="tsx"
        title="MultiThumbSlider.test.tsx"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-disc space-y-2 pl-6">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/slider-multithumb/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Slider (Multi-Thumb) Pattern
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/slider/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Slider Pattern
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="slider-multithumb" />
    </ul>
  </section>
</PatternLayout>
