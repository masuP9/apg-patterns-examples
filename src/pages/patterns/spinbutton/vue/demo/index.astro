---
/**
 * Demo-only Page: Spinbutton (Vue)
 *
 * This page renders the Spinbutton component in isolation without
 * the site layout. This ensures clean E2E testing environment.
 */
import '@/styles/global.css';
import Spinbutton from '@patterns/spinbutton/Spinbutton.vue';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Demo: Spinbutton (Vue)</title>
  </head>
  <body class="p-8">
    <h1 class="mb-6 text-2xl font-bold">Spinbutton Demo</h1>
    <div class="space-y-8">
      <section>
        <h2 class="mb-4 text-lg font-semibold">Basic Spinbutton</h2>
        <div class="apg-spinbutton-demo">
          <Spinbutton client:only="vue" defaultValue={5} label="Quantity" />
        </div>
      </section>
      <section>
        <h2 class="mb-4 text-lg font-semibold">Spinbutton with Range</h2>
        <div class="apg-spinbutton-demo">
          <Spinbutton
            client:only="vue"
            defaultValue={50}
            min={0}
            max={100}
            step={5}
            label="Volume"
            format="{value}%"
          />
        </div>
      </section>
      <section>
        <h2 class="mb-4 text-lg font-semibold">Disabled Spinbutton</h2>
        <div class="apg-spinbutton-demo">
          <Spinbutton
            client:only="vue"
            defaultValue={10}
            min={0}
            max={100}
            label="Disabled"
            disabled
          />
        </div>
      </section>
      <section>
        <h2 class="mb-4 text-lg font-semibold">Read-only Spinbutton</h2>
        <div class="apg-spinbutton-demo">
          <Spinbutton
            client:only="vue"
            defaultValue={25}
            min={0}
            max={100}
            label="Read-only"
            readOnly
          />
        </div>
      </section>
    </div>
  </body>
</html>
