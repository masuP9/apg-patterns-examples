---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import Switch from '@patterns/switch/Switch.svelte';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AccessibilityDocs from '@patterns/switch/AccessibilityDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import sourceCode from '@patterns/switch/Switch.svelte?raw';
import testCode from '@patterns/switch/Switch.test.svelte.ts?raw';
import { withBase } from '@/lib/utils';
---

<PatternLayout title="Switch - Svelte" pattern="switch" framework="svelte">
  <nav class="mb-6 text-sm">
    <a href={withBase('/patterns/')} class="text-primary hover:underline">Patterns</a>
    <span class="mx-2 text-muted-foreground">/</span>
    <span>Switch</span>
  </nav>

  <header class="mb-8">
    <h1 class="text-3xl font-bold mb-4">Switch</h1>
    <p class="text-lg text-muted-foreground">
      A control that allows users to toggle between two states: on and off.
    </p>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="switch" currentFramework="svelte" />

  <!-- Demo Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Demo</h2>
    <div class="p-6 rounded-lg border border-border bg-background">
      <div class="flex flex-col items-start gap-4">
        <Switch client:load>Wi-Fi</Switch>
        <Switch client:load initialChecked={true}>Bluetooth</Switch>
        <Switch client:load disabled>Airplane Mode (disabled)</Switch>
      </div>
    </div>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Accessibility Features</h2>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Source Code</h2>
    <CodeBlock
      code={sourceCode}
      lang="svelte"
      title="Switch.svelte"
    />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Usage</h2>
    <CodeBlock
      code={`<script>
  import Switch from './Switch.svelte';

  function handleChange(checked) {
    console.log('Checked:', checked);
  }
</script>

<Switch
  initialChecked={false}
  onCheckedChange={handleChange}
>
  Enable notifications
</Switch>`}
      lang="svelte"
      title="Example"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">API</h2>
    <ResponsiveTable>
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-b border-border">
            <th class="text-left py-2 pr-4">Prop</th>
            <th class="text-left py-2 pr-4">Type</th>
            <th class="text-left py-2 pr-4">Default</th>
            <th class="text-left py-2">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-b border-border">
            <td class="py-2 pr-4"><code>initialChecked</code></td>
            <td class="py-2 pr-4 text-muted-foreground">boolean</td>
            <td class="py-2 pr-4 text-muted-foreground">false</td>
            <td class="py-2">Initial checked state</td>
          </tr>
          <tr class="border-b border-border">
            <td class="py-2 pr-4"><code>onCheckedChange</code></td>
            <td class="py-2 pr-4 text-muted-foreground">(checked: boolean) =&gt; void</td>
            <td class="py-2 pr-4 text-muted-foreground">-</td>
            <td class="py-2">Callback when state changes</td>
          </tr>
          <tr class="border-b border-border">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="py-2 pr-4 text-muted-foreground">boolean</td>
            <td class="py-2 pr-4 text-muted-foreground">false</td>
            <td class="py-2">Whether the switch is disabled</td>
          </tr>
          <tr class="border-b border-border">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="py-2 pr-4 text-muted-foreground">Snippet | string</td>
            <td class="py-2 pr-4 text-muted-foreground">-</td>
            <td class="py-2">Switch label</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
    <p class="mt-4 text-sm text-muted-foreground">
      All other props are passed to the underlying <code>&lt;button&gt;</code> element.
    </p>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Testing</h2>
    <p class="text-muted-foreground mb-4">
      Tests cover APG compliance including keyboard interactions, ARIA attributes, and accessibility validation.
    </p>
    <div class="mt-6">
      <CodeBlock
        code={testCode}
        lang="typescript"
        title="Switch.test.svelte.ts"
      />
    </div>
  </section>

  <!-- Resources -->
  <section>
    <h2 class="text-xl font-semibold mb-4">Resources</h2>
    <ul class="list-disc pl-6 space-y-2">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/switch/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Switch Pattern
        </ExternalLink>
      </li>
    </ul>
  </section>
</PatternLayout>
