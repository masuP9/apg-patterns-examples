---
import PatternLayout from '../../../../layouts/PatternLayout.astro';
import {
  ToolbarToggleDemo,
  ToolbarToggleDefaultDemo,
  TextFormattingToolbarDemo,
  VerticalToolbarDemo,
  DisabledItemsToolbarDemo,
} from '@patterns/toolbar/ToolbarToggleDemo';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import ExternalLink from '@/components/ui/ExternalLink.astro';
import AiGuideActions from '@/components/ui/AiGuideActions.astro';
import AiGuideResourceItem from '@/components/ui/AiGuideResourceItem.astro';
import AccessibilityDocs from '@patterns/toolbar/AccessibilityDocs.astro';
import FrameworkTabs from '@/components/ui/FrameworkTabs.astro';
import { ResponsiveTable } from '@/components/ui/table';
import Heading from '@/components/ui/Heading.astro';
import sourceCode from '@patterns/toolbar/Toolbar.tsx?raw';
import TestingDocs from '@patterns/toolbar/TestingDocs.astro';
import testCode from '@patterns/toolbar/Toolbar.test.tsx?raw';

const tocItems = [
  { id: 'demo', text: 'Demo' },
  { id: 'accessibility', text: 'Accessibility' },
  { id: 'source-code', text: 'Source Code' },
  { id: 'usage', text: 'Usage' },
  { id: 'api', text: 'API' },
  { id: 'testing', text: 'Testing' },
  { id: 'resources', text: 'Resources' },
];
---

<PatternLayout title="Toolbar - React" pattern="toolbar" framework="react" tocItems={tocItems}>
  <header class="mb-8">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-4">
      <h1 class="text-3xl font-bold">Toolbar</h1>
      <AiGuideActions pattern="toolbar" />
    </div>
    <p class="text-muted-foreground text-lg">
      A container for grouping a set of controls, such as buttons, toggle buttons, or other input
      elements.
    </p>
  </header>

  <!-- Framework Selector -->
  <FrameworkTabs pattern="toolbar" currentFramework="react" />

  <!-- Demo Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Demo</Heading>

    <!-- Text Formatting Toolbar -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Text Formatting Toolbar</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        A horizontal toolbar with toggle buttons and regular buttons.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <TextFormattingToolbarDemo client:load />
      </div>
    </div>

    <!-- Vertical Toolbar -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Vertical Toolbar</h3>
      <p class="text-muted-foreground mb-4 text-sm">Use arrow up/down keys to navigate.</p>
      <div class="border-border bg-background rounded-lg border p-6">
        <VerticalToolbarDemo client:load />
      </div>
    </div>

    <!-- With Disabled Items -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">With Disabled Items</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        Disabled items are skipped during keyboard navigation.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <DisabledItemsToolbarDemo client:load />
      </div>
    </div>

    <!-- Controlled Toggle Buttons -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Controlled Toggle Buttons</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        Toggle buttons with controlled state. The current state is displayed and applied to the
        sample text.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <ToolbarToggleDemo client:load />
      </div>
    </div>

    <!-- Default Pressed States -->
    <div class="mb-8">
      <h3 class="mb-3 text-lg font-medium">Default Pressed States</h3>
      <p class="text-muted-foreground mb-4 text-sm">
        Toggle buttons with <code>defaultPressed</code> for initial state, including disabled states.
      </p>
      <div class="border-border bg-background rounded-lg border p-6">
        <ToolbarToggleDefaultDemo client:load />
      </div>
    </div>
    <p class="text-muted-foreground mt-2 text-sm">
      <a href="./demo/" class="text-primary hover:underline">Open demo only â†’</a>
    </p>
  </section>

  <!-- Accessibility Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Accessibility</Heading>
    <AccessibilityDocs />
  </section>

  <!-- Source Code Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Source Code</Heading>
    <CodeBlock collapsible collapsedLines={5} code={sourceCode} lang="tsx" title="Toolbar.tsx" />
  </section>

  <!-- Usage Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Usage</Heading>
    <CodeBlock
      collapsible
      collapsedLines={5}
      code={`import {
  Toolbar,
  ToolbarButton,
  ToolbarToggleButton,
  ToolbarSeparator
} from '@patterns/toolbar/Toolbar';

// Basic usage
<Toolbar aria-label="Text formatting">
  <ToolbarToggleButton>Bold</ToolbarToggleButton>
  <ToolbarToggleButton>Italic</ToolbarToggleButton>
  <ToolbarSeparator />
  <ToolbarButton>Copy</ToolbarButton>
  <ToolbarButton>Paste</ToolbarButton>
</Toolbar>

// Vertical toolbar
<Toolbar orientation="vertical" aria-label="Actions">
  <ToolbarButton>New</ToolbarButton>
  <ToolbarButton>Open</ToolbarButton>
  <ToolbarButton>Save</ToolbarButton>
</Toolbar>

// Controlled toggle button
const [isBold, setIsBold] = useState(false);

<Toolbar aria-label="Formatting">
  <ToolbarToggleButton
    pressed={isBold}
    onPressedChange={setIsBold}
  >
    Bold
  </ToolbarToggleButton>
</Toolbar>`}
      lang="tsx"
    />
  </section>

  <!-- API Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">API</Heading>

    <h3 class="mb-3 text-lg font-medium">Toolbar Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>orientation</code></td>
            <td class="py-2 pr-4"><code>'horizontal' | 'vertical'</code></td>
            <td class="py-2 pr-4"><code>'horizontal'</code></td>
            <td class="py-2">Direction of the toolbar</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>aria-label</code></td>
            <td class="py-2 pr-4"><code>string</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">Accessible label for the toolbar</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>children</code></td>
            <td class="py-2 pr-4"><code>React.ReactNode</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">Toolbar content</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">ToolbarButton Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">Whether the button is disabled</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onClick</code></td>
            <td class="py-2 pr-4"><code>() =&gt; void</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">Click handler</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>

    <h3 class="mb-3 text-lg font-medium">ToolbarToggleButton Props</h3>
    <ResponsiveTable class="mb-6">
      <table class="w-full border-collapse">
        <thead>
          <tr class="border-border border-b">
            <th class="py-2 pr-4 text-left">Prop</th>
            <th class="py-2 pr-4 text-left">Type</th>
            <th class="py-2 pr-4 text-left">Default</th>
            <th class="py-2 text-left">Description</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>pressed</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">Controlled pressed state</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>defaultPressed</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">Initial pressed state (uncontrolled)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>onPressedChange</code></td>
            <td class="py-2 pr-4"><code>(pressed: boolean) =&gt; void</code></td>
            <td class="py-2 pr-4">-</td>
            <td class="py-2">Callback when pressed state changes</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4"><code>disabled</code></td>
            <td class="py-2 pr-4"><code>boolean</code></td>
            <td class="py-2 pr-4"><code>false</code></td>
            <td class="py-2">Whether the button is disabled</td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </section>

  <!-- Testing Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Testing</Heading>
    <TestingDocs />
    <div class="mt-6">
      <CodeBlock
        collapsible
        collapsedLines={5}
        code={testCode}
        lang="tsx"
        title="Toolbar.test.tsx"
      />
    </div>
  </section>

  <!-- Resources Section -->
  <section class="mb-12">
    <Heading level={2} class="mb-4 text-xl font-semibold">Resources</Heading>
    <ul class="list-inside list-disc space-y-2">
      <li>
        <ExternalLink
          href="https://www.w3.org/WAI/ARIA/apg/patterns/toolbar/"
          class="text-primary hover:underline"
        >
          WAI-ARIA APG: Toolbar Pattern
        </ExternalLink>
      </li>
      <li>
        <ExternalLink
          href="https://w3c.github.io/aria/#toolbar"
          class="text-primary hover:underline"
        >
          WAI-ARIA: toolbar role
        </ExternalLink>
      </li>
      <AiGuideResourceItem pattern="toolbar" />
    </ul>
  </section>
</PatternLayout>
