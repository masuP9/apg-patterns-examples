---
/**
 * Demo-only Page: Tooltip (Vue)
 *
 * This page renders the Tooltip component in isolation without
 * the site layout. This ensures clean E2E testing environment.
 */
import '@/styles/global.css';
import Tooltip from '@patterns/tooltip/Tooltip.vue';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Demo: Tooltip (Vue)</title>
  </head>
  <body class="p-8">
    <div class="flex flex-wrap items-center gap-8">
      <Tooltip content="Save your changes" client:load>
        <button class="bg-primary text-primary-foreground hover:bg-primary/90 rounded-md px-4 py-2">
          Save
        </button>
      </Tooltip>

      <Tooltip content="This appears on the right" placement="right" client:load>
        <button
          class="bg-secondary text-secondary-foreground hover:bg-secondary/90 rounded-md px-4 py-2"
        >
          Right tooltip
        </button>
      </Tooltip>

      <Tooltip content="This appears below" placement="bottom" client:load>
        <button
          class="bg-secondary text-secondary-foreground hover:bg-secondary/90 rounded-md px-4 py-2"
        >
          Bottom tooltip
        </button>
      </Tooltip>

      <Tooltip content="This tooltip is disabled" :disabled="true" client:load>
        <button class="bg-muted text-muted-foreground rounded-md px-4 py-2">
          Disabled tooltip
        </button>
      </Tooltip>
    </div>
  </body>
</html>
