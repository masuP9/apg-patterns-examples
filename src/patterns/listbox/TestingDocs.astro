---
import ExternalLink from '@/components/ui/ExternalLink.astro';
import { ResponsiveTable } from '@/components/ui/table';
import CodeBlock from '@/components/ui/CodeBlock.astro';
import type { Locale } from '@/i18n';
import { localize, createTableHeaderTranslator } from '@/lib/pattern-data/i18n';
import { listboxAccessibilityData } from './accessibility-data';
import fs from 'node:fs';
import path from 'node:path';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const t = localize(locale);
const h = createTableHeaderTranslator(locale);
const data = listboxAccessibilityData;
const testing = data.testing!;

// Read actual test file at build time
const e2eTestPath = path.join(process.cwd(), testing.e2eTestFile || 'e2e/listbox.spec.ts');
const e2eTestCode = fs.readFileSync(e2eTestPath, 'utf-8');

// Priority colors
const priorityColors: Record<string, string> = {
  high: 'bg-red-500',
  medium: 'bg-yellow-500',
  low: 'bg-green-500',
};

// Localized labels
const labels = {
  testingStrategy: locale === 'ja' ? 'テスト戦略' : 'Testing Strategy',
  testCategories: locale === 'ja' ? 'テストカテゴリ' : 'Test Categories',
  exampleTestCode: locale === 'ja' ? 'テストコード例' : 'Example Test Code',
  testingTools: locale === 'ja' ? 'テストツール' : 'Testing Tools',
  seeFullDocs: locale === 'ja' ? '完全なドキュメントは' : 'See',
  forFullDocs: locale === 'ja' ? 'を参照してください。' : 'for full documentation.',
  e2eTestFileDesc:
    locale === 'ja'
      ? `以下は実際のE2Eテストファイル（${testing.e2eTestFile}）です。`
      : `The following is the actual E2E test file (${testing.e2eTestFile}).`,
  test: locale === 'ja' ? 'テスト' : 'Test',
  description: locale === 'ja' ? '説明' : 'Description',
};

// Priority labels
const priorityLabels: Record<string, Record<string, string>> = {
  high: { en: 'High Priority:', ja: '高優先度:' },
  medium: { en: 'Medium Priority:', ja: '中優先度:' },
  low: { en: 'Low Priority:', ja: '低優先度:' },
};
---

<div class="prose dark:prose-invert max-w-none">
  <p class="text-muted-foreground mb-4">
    {
      locale === 'ja'
        ? 'テストは、ARIA属性、キーボード操作、選択動作、アクセシビリティ要件全般にわたってAPG準拠を検証します。Listboxコンポーネントは2層のテスト戦略を採用しています。'
        : 'Tests verify APG compliance for ARIA attributes, keyboard interactions, selection behavior, and accessibility requirements. The Listbox component uses a two-layer testing strategy.'
    }
  </p>

  <h3 class="mb-3 text-lg font-medium">{labels.testingStrategy}</h3>

  {
    testing.strategies.map((strategy) => (
      <div class="bg-muted/50 mb-6 rounded-lg p-4">
        <h4 class="mb-2 font-medium">{t(strategy.title)}</h4>
        <p class="text-muted-foreground mb-2 text-sm">{t(strategy.description)}</p>
        <ul class="text-muted-foreground list-disc space-y-1 pl-6 text-sm">
          {strategy.areas.map((area) => (
            <li>{t(area)}</li>
          ))}
        </ul>
      </div>
    ))
  }

  <h3 class="mb-3 text-lg font-medium">{labels.testCategories}</h3>

  {
    testing.categories.map((category) => (
      <>
        <h4 class="mb-2 flex items-center gap-2 font-medium">
          <span class={`inline-block h-3 w-3 rounded-full ${priorityColors[category.priority]}`} />
          {priorityLabels[category.priority][locale]} {t(category.title)} ({category.testType})
        </h4>
        <ResponsiveTable class="mb-6">
          <table class="w-full border-collapse">
            <thead>
              <tr class="border-border border-b">
                <th class="py-2 pr-4 text-left">{labels.test}</th>
                <th class="py-2 text-left">{labels.description}</th>
              </tr>
            </thead>
            <tbody>
              {category.items.map((item) => (
                <tr class="border-border border-b">
                  <td class="py-2 pr-4">
                    <code>{item.name}</code>
                  </td>
                  <td class="py-2">
                    <Fragment set:html={t(item.description)} />
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </ResponsiveTable>
      </>
    ))
  }

  <h3 class="mb-3 text-lg font-medium">{labels.exampleTestCode}</h3>
  <p class="text-muted-foreground mb-4 text-sm">
    {labels.e2eTestFileDesc}
  </p>
  <CodeBlock
    code={e2eTestCode}
    lang="typescript"
    title={testing.e2eTestFile}
    collapsible
    collapsedLines={20}
  />

  <h3 class="mb-3 text-lg font-medium">{labels.testingTools}</h3>
  <ul class="mb-6 list-disc space-y-2 pl-6">
    {
      testing.tools.map((tool) => (
        <li>
          <ExternalLink href={tool.url} class="text-primary hover:underline">
            {tool.name}
          </ExternalLink>
          - {t(tool.description)}
        </li>
      ))
    }
  </ul>

  {
    testing.documentationLink && (
      <p class="text-muted-foreground text-sm">
        {labels.seeFullDocs}{' '}
        <ExternalLink href={testing.documentationLink} class="text-primary hover:underline">
          testing-strategy.md
        </ExternalLink>{' '}
        {labels.forFullDocs}
      </p>
    )
  }
</div>
