---
import ExternalLink from '@/components/ui/ExternalLink.astro';
import { ResponsiveTable } from '@/components/ui/table';
---

<div class="prose dark:prose-invert max-w-none">
  <h3 class="mb-3 text-lg font-medium">WAI-ARIA Roles</h3>
  <ul class="mb-6 list-disc space-y-2 pl-6">
    <li>
      <code>button</code> - Indicates a widget that triggers an action when activated<br />
      <ExternalLink
        href="https://w3c.github.io/aria/#button"
        class="text-primary text-sm hover:underline"
      >
        WAI-ARIA button role
      </ExternalLink>
    </li>
  </ul>

  <h3 class="mb-3 text-lg font-medium">WAI-ARIA States</h3>
  <div class="mb-6">
    <h4 class="mb-2 font-medium"><code>aria-pressed</code></h4>
    <p class="text-muted-foreground mb-3">
      Indicates the current pressed state of the toggle button.
    </p>
    <ResponsiveTable class="mb-2">
      <table class="w-full border-collapse">
        <tbody>
          <tr class="border-border border-b">
            <td class="w-32 py-2 pr-4 font-medium">Values</td>
            <td class="py-2">
              <code>true</code> | <code>false</code>
              <span class="text-muted-foreground ml-2 text-sm"
                >(tri-state buttons may also use <code>"mixed"</code>)</span
              >
            </td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4 font-medium">Required</td>
            <td class="py-2">Yes (for toggle buttons)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4 font-medium">Default</td>
            <td class="py-2"><code>initialPressed</code> prop (default: <code>false</code>)</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4 font-medium">Change Trigger</td>
            <td class="py-2">Click, Enter, Space</td>
          </tr>
          <tr class="border-border border-b">
            <td class="py-2 pr-4 font-medium">Reference</td>
            <td class="py-2">
              <ExternalLink
                href="https://w3c.github.io/aria/#aria-pressed"
                class="text-primary hover:underline"
              >
                aria-pressed
              </ExternalLink>
            </td>
          </tr>
        </tbody>
      </table>
    </ResponsiveTable>
  </div>

  <h3 class="mb-3 text-lg font-medium">Keyboard Support</h3>
  <ResponsiveTable class="mb-4">
    <table class="w-full border-collapse">
      <thead>
        <tr class="border-border border-b">
          <th class="py-2 pr-4 text-left">Key</th>
          <th class="py-2 text-left">Action</th>
        </tr>
      </thead>
      <tbody>
        <tr class="border-border border-b">
          <td class="py-2 pr-4"
            ><kbd class="rounded bg-gray-100 px-2 py-1 dark:bg-gray-800">Space</kbd></td
          >
          <td class="py-2">Toggle the button state</td>
        </tr>
        <tr class="border-border border-b">
          <td class="py-2 pr-4"
            ><kbd class="rounded bg-gray-100 px-2 py-1 dark:bg-gray-800">Enter</kbd></td
          >
          <td class="py-2">Toggle the button state</td>
        </tr>
      </tbody>
    </table>
  </ResponsiveTable>
</div>
